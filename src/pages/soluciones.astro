    "name": "Hikevo Design"
  },
  "areaServed": ["World"],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Digital Services",
    "itemListElement": [
      // --- PLANES WEB (PAGO ÚNICO) ---
