---
// Importamos la fuente Inter
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/900.css';

// 1. IMPORTANTE: Importamos los estilos globales donde definimos las animaciones
import '../styles/global.css'; 

import { ClientRouter } from 'astro:transitions';
// Importamos el Footer
import Footer from '../components/common/Footer.astro';
import WhatsAppSticky from '../components/common/WhatsAppSticky.astro';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const { 
	title, 
	description, 
	image = "/open-graph.png" 
} = Astro.props;

// CORRECCIÓN 1: Fallback para evitar el error "Invalid URL" si Astro.site no está configurado
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? "https://hikevodesign.com");

const organizationSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Hikevo Design",
  "image": "https://hikevodesign.com/logo.svg",
  "url": "https://hikevodesign.com",
  "priceRange": "$$$",
  "address": { "@type": "PostalAddress", "addressCountry": "VE" },
  "areaServed": ["US", "ES", "MX", "Latin America"],
  "description": "Agencia de desarrollo web y marketing digital internacional. 100% Remoto."
});
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<ClientRouter />
		
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL} />

		<link 
  rel="preload" 
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
  as="style" 
  onload="this.onload=null;this.rel='stylesheet'" 
  crossorigin="anonymous" 
  referrerpolicy="no-referrer"
/>

<noscript>
    <link 
      rel="stylesheet" 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" 
      crossorigin="anonymous" 
      referrerpolicy="no-referrer" 
    />
</noscript>

		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={image} />

		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>

		<script type="application/ld+json" set:html={organizationSchema} />
		
		<slot name="head" />
	</head>
	<body class="bg-white text-hikevo-black font-sans antialiased selection:bg-hikevo-yellow selection:text-black flex flex-col min-h-screen">
		
		<div class="flex-grow">
			<slot />
		</div>

		<Footer />
		<WhatsAppSticky />

		<script>
			// Función para inicializar el observador de animaciones
			const initAnimations = () => {
				const observerOptions = {
					root: null,
					rootMargin: '0px', 
					threshold: 0.1 // 10% visible para activar
				};

				const observer = new IntersectionObserver((entries, observer) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							entry.target.classList.add('is-visible');
							observer.unobserve(entry.target);
						}
					});
				}, observerOptions);

				// Seleccionar todos los elementos con la clase .reveal-smooth
				const elements = document.querySelectorAll('.reveal-smooth');
				elements.forEach(el => observer.observe(el));
			};

			// Ejecutar al cargar la página inicialmente
			document.addEventListener('DOMContentLoaded', initAnimations);
			
			// Ejecutar en cada navegación subsiguiente (gracias a ClientRouter)
			document.addEventListener('astro:page-load', initAnimations);
		</script>
	</body>
</html>

<style is:global>
	body {
		overflow-x: hidden;
	}
	h1, h2, h3, h4, h5, h6 {
		letter-spacing: -0.025em; 
	}
</style>