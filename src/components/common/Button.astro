---
interface Props {
  href: string;
  variant?: "primary" | "outline" | "text";
  class?: string;
  isExternal?: boolean;
}

const { href, variant = "primary", class: className, isExternal = false } = Astro.props;

const baseStyles = "inline-flex items-center justify-center px-8 py-3 text-sm font-semibold transition-all duration-300 rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-hikevo-yellow";

const variants = {
  primary: "bg-hikevo-yellow text-hikevo-black hover:bg-[#E5A616] shadow-sm hover:shadow-md",
  outline: "bg-transparent border border-hikevo-black text-hikevo-black hover:bg-gray-50",
  text: "bg-transparent text-hikevo-black hover:text-hikevo-gray underline decoration-2 decoration-hikevo-yellow underline-offset-4 px-0 py-0 hover:bg-transparent shadow-none rounded-none"
};

const attrs = isExternal ? { target: "_blank", rel: "noopener noreferrer" } : {};
---

<a href={href} class:list={[baseStyles, variants[variant], className]} {...attrs}>
  <slot />
</a>