---
// src/components/common/Header.astro
import Container from '../ui/Container.astro';
import Button from './Button.astro';

const navItems = [
  { label: 'Soluciones', href: '/soluciones' },
  { label: 'Portafolio', href: '/portafolio' },
  { label: 'Nosotros', href: '/nosotros' },
];
---

<header class="fixed top-0 w-full z-50 transition-all duration-300 bg-white border-b border-gray-100" id="main-header">
  <Container>
    <div class="flex items-center justify-between h-20">
      
      <a href="/" class="flex items-center gap-2 group relative z-50">
        <img 
          src="/logo.svg" 
          alt="Logo Hikevo Design" 
          width="120" 
          height="40"
          class="h-8 w-auto transition-transform duration-300 group-hover:scale-105" 
        />
      </a>

      <nav class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a href={item.href} class="text-sm font-medium text-hikevo-charcoal hover:text-hikevo-black transition-colors">
            {item.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-4 relative z-50">
        <div class="hidden md:block">
          <Button
            href="https://wa.me/17866692775?text=Hola"
            variant="primary"
            isExternal={true}
          >
            Hablemos
          </Button>
        </div>
        
        <button 
          id="menu-toggle"
          class="md:hidden p-2 text-hikevo-black focus:outline-none focus:ring-2 focus:ring-hikevo-yellow rounded-lg transition-colors" 
          aria-label="Abrir menú"
        >
          <svg id="icon-open" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 hidden transition-transform duration-300 rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </Container>

  <div 
    id="mobile-menu" 
    class="fixed inset-0 z-40 bg-white flex flex-col justify-start pt-32 items-center gap-8 translate-x-full transition-transform duration-300 ease-in-out md:hidden"
  >
  
    <nav class="flex flex-col items-center gap-8 w-full">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="text-2xl font-bold text-hikevo-black hover:text-hikevo-yellow transition-colors mobile-link w-full text-center py-2"
        >
          {item.label}
        </a>
      ))}
    </nav>
    
    <div class="mt-4">
       <Button
            href="https://wa.me/17866692775?text=Hola"
            variant="primary"
            isExternal={true}
            class="mobile-link text-lg px-8 py-3"
          >
            Hablemos
          </Button>
    </div>
  </div>
</header>


<script is:inline>
  function initMenu() {
    const toggleBtn = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');
    
    if (!toggleBtn || !mobileMenu) return;

    // 1. Clonamos el botón PRIMERO para limpiar eventos anteriores
    const newBtn = toggleBtn.cloneNode(true);
    toggleBtn.parentNode.replaceChild(newBtn, toggleBtn);

    // 2. AHORA seleccionamos los íconos DENTRO del nuevo botón
    const iconOpen = newBtn.querySelector('#icon-open');
    const iconClose = newBtn.querySelector('#icon-close');

    let isMenuOpen = false;

    const toggleMenu = () => {
      isMenuOpen = !isMenuOpen;
      
      // Lógica visual del menú
      if (isMenuOpen) {
        mobileMenu.classList.remove('translate-x-full');
        document.body.style.overflow = 'hidden'; 
        
        // Cambio de íconos
        iconOpen?.classList.add('hidden');
        iconClose?.classList.remove('hidden');
        iconClose?.classList.remove('rotate-90'); 
      } else {
        mobileMenu.classList.add('translate-x-full');
        document.body.style.overflow = '';
        
        // Cambio de íconos
        iconOpen?.classList.remove('hidden');
        iconClose?.classList.add('hidden');
        iconClose?.classList.add('rotate-90');
      }
      newBtn.setAttribute('aria-expanded', isMenuOpen.toString());
    };

    // 3. Agregamos el evento al nuevo botón
    newBtn.addEventListener('click', toggleMenu);

    mobileLinks.forEach(link => {
      // Importante: clonar los links también si quieres limpiar sus eventos, 
      // o asegurarte de que no se dupliquen. Para este caso simple, esto funciona:
      link.addEventListener('click', () => {
        if (isMenuOpen) toggleMenu();
      });
    });
  }

  // Ejecutar inmediatamente
  initMenu();
  // Ejecutar si hay navegación entre páginas (View Transitions)
  document.addEventListener('astro:after-swap', initMenu);
</script>

