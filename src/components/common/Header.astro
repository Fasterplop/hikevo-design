---
import Container from '../ui/Container.astro';
import Button from './Button.astro';

const navItems = [
  { label: 'Soluciones', href: '/soluciones' },
  { label: 'Portafolio', href: '/portafolio' },
  { label: 'Nosotros', href: '/nosotros' },
];
---

<header class="fixed top-0 w-full z-50 transition-all duration-300 bg-white/80 backdrop-blur-md border-b border-gray-100/50" id="main-header">
  <Container>
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <!-- SVG Logo simplificado basado en el PDF -->
        <svg class="w-8 h-8 text-hikevo-black transition-transform group-hover:scale-105" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
            <circle cx="12" cy="12" r="5" class="text-hikevo-yellow"/>
        </svg>
        <span class="text-xl font-bold tracking-tight text-hikevo-black">Hikevo</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a href={item.href} class="text-sm font-medium text-hikevo-charcoal hover:text-hikevo-black transition-colors">
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA & Mobile Toggle -->
      <div class="flex items-center gap-4">
        <div class="hidden md:block">
            <Button href="https://wa.me/1234567890" variant="primary" isExternal={true}>
              Hablemos
            </Button>
        </div>
        
        <!-- Mobile Menu Button (Simple) -->
        <button class="md:hidden p-2 text-hikevo-black" aria-label="Menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </Container>
</header>